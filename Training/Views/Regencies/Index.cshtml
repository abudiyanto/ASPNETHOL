@model IEnumerable<Training.Models.Regency>

@{
    ViewBag.Title = "Daftar Kota/Kabupaten";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row page-titles">
    <div class="col-md-6 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Kelola Kota/Kabupaten</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Kota/Kabupaten</a></li>
            <li class="breadcrumb-item active">Daftar Kota/Kabupaten</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <p class="text-muted m-b-20">
                    @Html.ActionLink("Tambah Baru", "Create", null, new { @class = "btn btn-info" })
                </p>
                <div class="table-responsive">
                    <table id="table" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Kode</th>
                                <th>Nama</th>
                                <th>Provinsi</th>
                                <th class="text-nowrap">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("Details","Posts", new { id = item.Id})" class="h6">@item.Id</a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details","Posts", new { id = item.Id})" class="h6">@item.Name</a>
                                    </td>
                                    <td>
                                        @item.Province.Name
                                    </td>
                                    <td class="text-nowrap">
                                        <a href="@Url.Action("Edit", new { id = item.Id})" data-toggle="tooltip" data-original-title="Edit">
                                            <i class="fa fa-pencil text-info m-r-10"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.Id })" data-toggle="tooltip" data-original-title="Delete">
                                            <i class="fa fa-trash-o text-danger m-r-10"></i>
                                        </a>
                                        <a href="@Url.Action("Details", new { id = item.Id})" data-toggle="tooltip" data-original-title="Details">
                                            <i class="fa fa-clone m-r-10"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section styles {
    <link href="~/assets/plugins/sweetalert/sweetalert.css" rel="stylesheet" type="text/css">
}
@section scripts{
    <script src="~/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/plugins/sweetalert/sweetalert.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table').DataTable();
        });
    </script>
}
